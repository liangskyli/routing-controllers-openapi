{
  "name": "@liangskyli/routing-controllers-openapi",
  "version": "0.8.2",
  "description": "routing-controllers generate openapi file",
  "author": "liangsky <640634387@qq.com>",
  "homepage": "https://github.com/liangskyli/routing-controllers-openapi#readme",
  "license": "MIT",
  "keywords": [
    "routing-controllers",
    "openapi",
    "routing-controllers generate openapi file"
  ],
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "typings": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "files": [
    "lib",
    "bin",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "bin": {
    "gen-openapi": "bin/index.js",
    "gen-openapi-cjs": "bin/index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liangskyli/routing-controllers-openapi.git"
  },
  "scripts": {
    "test": "vitest run",
    "test-u": "vitest -u run",
    "coverage": "vitest run --coverage",
    "build": "rollup --config=./rollup.config.js",
    "update:deps": "pnpm update --interactive --latest"
  },
  "dependencies": {
    "@liangskyli/utils": "6.0.0",
    "commander": "^13.1.0",
    "fs-extra": "^11.3.1",
    "glob": "^10.4.5",
    "js-yaml": "^4.1.0",
    "openapi3-ts": "^4.5.0",
    "typescript": "~5.5.0",
    "typescript-json-schema": "^0.65.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/koa": "^2.15.0",
    "koa": "^2.15.3",
    "routing-controllers": "^0.10.4",
    "typedi": "^0.10.0"
  },
  "peerDependencies": {
    "routing-controllers": "^0.9.0 || ^0.10.0 || ^0.11.0"
  },
  "peerDependenciesMeta": {
    "routing-controllers": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bugs": {
    "url": "https://github.com/liangskyli/routing-controllers-openapi/issues"
  }
}
